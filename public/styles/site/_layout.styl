@import "site/_variables"

html,
body {
    width: 100%;
    height: 100%;
    min-height: 100%;
}

html {
    font-feature-settings: "tnum" 1;
    letter-spacing: 0;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    box-sizing: border-box;
}

body {
    background: #fff;
    font-family: Helvetica, Arial, sans-serif;
    font-size: 14px;
    line-height: 1.36;
}

#MAIN_CONTENT
.root-container
    width: 100%;
    height: 100%;
    min-height: 100%;
    .content
        padding 120px 30px 0
        height 100%


.header-block
    position fixed
    top 0
    width 100%
    padding 15px 30px 25px
    border-bottom 1px solid #DFDFDF
    box-shadow: 0 1px 6px rgba(#A0A0A0, 0.3)
    z-index 100
    background-color #fff
    .header-logo
        position absolute
        top 0
        left 30px
        img
            width 100px
            height 90px
    .menu-top
        padding-left 110px
        display: flex
        flex-direction row
        align-items flex-end
        .logo-name
            display flex
            flex-direction column
            font-weight bold
            font-size 30px
            line-height 30px
            color #000
            margin-right 5px
            .logo-word1
                display inline-block
                font-weight bold
                color #000
                margin-right 5px
            .logo-word2
                display: inline-block;
                font-weight: bold;
                color #000
        .menu-top-inner
            display flex
            flex-direction row
            justify-content space-between
            fort-size: 14px
            color: #000
            a
                display inline-block
                margin-right 20px
                &:last-child
                    margin-right: 0

#footer
    position relative;
    min-height 300px
    padding 16px 24px
    color gray-light


.gallery-image img
    display block
    max-width 100%
    height auto
